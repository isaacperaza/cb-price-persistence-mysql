{
    "name": "cb/price-persistence-mysql",
    "description": "Package that handle price mysql persistence",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Isaac Peraza",
            "email": "isaac.peraza@gmail.com"
        }
    ],
    "repositories" : [
        {
            "type": "vcs",
            "url": "git@github.com:isaacperaza/cb-price-persistence-contracts.git"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "vlucas/phpdotenv": "^3.3",
        "cb/price-persistence-contracts": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "*",
        "johnkary/phpunit-speedtrap": "*",
        "jakub-onderka/php-parallel-lint": "*",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Cb\\PricePersistence\\Mysql\\": "src\\Mysql"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "build": "composer lint:syntax && composer lint:style && composer test:units",
        "lint:beautify": "vendor/bin/phpcbf --standard=PSR2 --extensions=php --severity=1 src/ tests/ -v",
        "lint:style": "vendor/bin/phpcs --standard=PSR2 --extensions=php --severity=1 src/ tests/ -v",
        "lint:syntax": "vendor/bin/parallel-lint src/ tests/",
        "test:coverage": "vendor/bin/phpunit --coverage-text --coverage-html=build/coverage/html",
        "test:units": "vendor/bin/phpunit"
    }
}
